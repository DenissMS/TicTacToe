<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".GameActivity"
    android:background="@color/TableBackground">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:alignmentMode="alignBounds"
        android:background="@color/TableBackground"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_row="0"
            android:layout_column="0">

            <TableLayout
                android:layout_width="@dimen/GridWidth"
                android:layout_height="@dimen/GridWidth"
                android:layout_row="2"
                android:layout_column="2"
                android:background="@drawable/tictac_grid"
                android:layout_gravity="center">

                <TableRow
                    android:padding="5dp"
                    android:layout_height="@dimen/RowSize1"
                    android:layout_width="@dimen/RowSize2"
                    android:baselineAligned="false">

                    <Button
                        android:layout_width="@dimen/RowSize2"
                        android:layout_height="@dimen/RowSize1"
                        android:id="@+id/btn1"
                        android:layout_column="0"
                        android:enabled="true"
                        android:background="@color/empty"
                        android:onClick="OnHintButtonClick"
                        />

                    <Button
                        android:layout_width="@dimen/RowSize2"
                        android:layout_height="@dimen/RowSize1"
                        android:id="@+id/btn2"
                        android:layout_column="2"
                        android:background="@color/empty"
                        android:onClick="OnHintButtonClick"
                        />

                    <Button
                        android:layout_width="@dimen/RowSize2"
                        android:layout_height="@dimen/RowSize1"
                        android:id="@+id/btn3"
                        android:layout_column="3"
                        android:background="@color/empty"
                        android:onClick="OnHintButtonClick"
                        />
                </TableRow>
                <TableRow android:padding="5dp"
                    android:layout_height="@dimen/RowSize1"
                    android:layout_width="@dimen/GridWidth">

                    <Button
                        android:layout_width="@dimen/RowSize2"
                        android:layout_height="@dimen/RowSize1"
                        android:id="@+id/btn4"
                        android:layout_column="0"
                        android:background="@color/empty"
                        android:onClick="OnHintButtonClick"
                        />

                    <Button
                        android:layout_width="@dimen/RowSize2"
                        android:layout_height="@dimen/RowSize1"
                        android:id="@+id/btn5"
                        android:layout_column="2"
                        android:background="@color/empty"
                        android:onClick="OnHintButtonClick"
                        />

                    <Button
                        android:layout_width="@dimen/RowSize2"
                        android:layout_height="@dimen/RowSize1"
                        android:id="@+id/btn6"
                        android:layout_column="3"
                        android:background="@color/empty"
                        android:onClick="OnHintButtonClick"
                        />
                </TableRow>
                <TableRow android:padding="5dp"
                    android:layout_height="@dimen/RowSize1"
                    android:layout_width="@dimen/GridWidth">

                    <Button
                        android:layout_width="@dimen/RowSize2"
                        android:layout_height="@dimen/RowSize1"
                        android:id="@+id/btn7"
                        android:layout_column="0"
                        android:background="@color/empty"
                        android:onClick="OnHintButtonClick"
                        />

                    <Button
                        android:layout_width="@dimen/RowSize2"
                        android:layout_height="@dimen/RowSize1"
                        android:id="@+id/btn8"
                        android:layout_column="2"
                        android:background="@color/empty"
                        android:onClick="OnHintButtonClick"
                        />

                    <Button
                        android:layout_width="@dimen/RowSize2"
                        android:layout_height="@dimen/RowSize1"
                        android:id="@+id/btn9"
                        android:layout_column="3"
                        android:background="@color/empty"
                        android:onClick="OnHintButtonClick"
                        />

                </TableRow>

            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notify"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/textSize" />

            <Button
                android:layout_width="@dimen/ButtonWidth"
                android:layout_height="wrap_content"
                android:text="@string/Play"
                android:id="@+id/play"
                android:layout_row="18"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/ButtonMargin"
                android:onClick="OnPlayButtonClick"/>

            <Button
                android:layout_width="@dimen/ButtonWidth"
                android:layout_height="wrap_content"
                android:text="@string/Exit"
                android:id="@+id/exit"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/ButtonMargin"
                android:onClick="OnExitButtonClick"/>

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"></GridLayout>
        </LinearLayout>

    </GridLayout>

</RelativeLayout>
